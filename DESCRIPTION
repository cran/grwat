Package: grwat
Type: Package
Title: River Hydrograph Separation and Analysis
Version: 0.0.2
Date: 2022-05-17
Authors@R: c(
    person("Timofey", "Samsonov",, "iamste@yandex.ru", role = c("aut", "cre"), 
      comment = c(ORCID = "0000-0001-5994-0302")
